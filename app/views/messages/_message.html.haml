.message{data: {id: message.id}}
  .message--info
    .message--info__user
      = message.user.name
    .message--info__date
      = message.created_at.strftime("%Y/%m/%d %H:%M")
  .message--contents
    - if message.content.present?
      %p.message--contents__content
        = message.content
    = image_tag message.image.url, class: 'message--contents__content' if message.image.present?